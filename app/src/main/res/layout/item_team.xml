<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_margin_all"
    android:layout_marginTop="@dimen/item_margin_all"
    android:layout_marginEnd="@dimen/item_margin_all"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgTeamBadge"
            android:layout_width="@dimen/team_badge_dimension"
            android:layout_height="@dimen/team_badge_dimension"
            tools:src="@drawable/ic_add_alert" />

        <TextView
            android:id="@+id/tvTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            tools:text="Liverpool" />

    </LinearLayout>

</android.support.v7.widget.CardView>