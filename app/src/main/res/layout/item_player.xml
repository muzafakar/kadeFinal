<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_margin_all"
    android:layout_marginTop="@dimen/item_margin_all"
    android:layout_marginEnd="@dimen/item_margin_all"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgPlayerCutOut"
            android:layout_width="@dimen/team_badge_dimension"
            android:layout_height="@dimen/team_badge_dimension"
            android:layout_alignParentStart="true"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            tools:src="@drawable/ic_add_alert" />

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_toEndOf="@id/imgPlayerCutOut"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            tools:text="Zulfakar" />

        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="Midlefielder" />

    </RelativeLayout>

</android.support.v7.widget.CardView>